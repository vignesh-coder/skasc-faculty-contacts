<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.ac.skasc.skascfacultycontacts">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SkascFacultyContacts"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DepartmentActivity"
            android:label="Departments"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".PeopleActivity"
            android:label="People"
            android:windowSoftInputMode="adjustNothing" />

        <service
            android:name=".VersionCheckService"
            android:enabled="true"
            android:exported="true"
            android:permission="granted" />

        <activity
            android:name=".ViewContactActivity"
            android:label="" />
    </application>

</manifest>